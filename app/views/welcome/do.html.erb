<div class="wrapper">
  <form class="profile" action='/welcome/logout' method='post' >
    <p class="title">Profile</p>
    <h2>Hello <%= @user.user_name %>!</h2>
    Full Name: <%= @user.full_name %></br>
    Street Address: <%= @user.address %></br>
    City: <%= @user.city %></br>
    State: <%= @user.state %></br>
    Postal Code: <%= @user.postal_code %></br>
    Country: <%= @user.country %></br>
    Email: <%= @user.email %></br>
    <% if flash[:no_phone] %>
        <div class="no_phone"><%= flash[:no_phone] %></div>
    <% end %>
    <ul>
      <% @phones.each do |phone| %>
        <li>Phone Number: <%= phone.number %></li>
      <% end %>
    </ul>


    <button>
      <span class="state">Logout</span>
    </button>
  </form>
</div>
